<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".auth.RegisterFragment">

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradiant_bg" />

    <ImageView
        android:id="@+id/ivRegisterBackArrow"
        android:layout_width="27dp"
        android:layout_height="20dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/baseline_keyboard_backspace_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white" />

    <LinearLayout
        android:id="@+id/headerLayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Started!"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create an account to continue"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="168dp"
        android:background="@drawable/login_card_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="34dp"
                android:layout_marginTop="42dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <Button
                    android:id="@+id/btnRegisterWithGoogle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/google_button_bg"
                    android:drawableStart="@drawable/facebook_icon"
                    android:text="Continue with google"
                    android:textSize="14sp"
                    android:textColor="@color/lightBlack"
                    app:backgroundTint="@null" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="34dp"
                android:layout_marginTop="18dp"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/gray2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:text="or" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/gray2" />

            </LinearLayout>

            <EditText
                android:id="@+id/etRegisterUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="34dp"
                android:lines="1"
                android:layout_marginTop="18sp"
                android:background="@drawable/et_border"
                android:inputType="text"
                android:textSize="14sp"
                android:hint="username"
                android:paddingHorizontal="10dp"
                android:paddingVertical="14dp" />

            <EditText
                android:id="@+id/etRegisterEmail"
                android:layout_width="match_parent"
                android:inputType="textEmailAddress"
                android:layout_height="wrap_content"
                android:lines="1"
                android:layout_marginHorizontal="34dp"
                android:textSize="14sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/et_border"
                android:hint="email"
                android:paddingHorizontal="10dp"
                android:paddingVertical="14dp" />
            <EditText
                android:id="@+id/etRegisterPassword"
                android:layout_width="match_parent"
                android:inputType="textPassword"
                android:layout_height="wrap_content"
                android:lines="1"
                android:layout_marginHorizontal="34dp"
                android:textSize="14sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/et_border"
                android:hint="password"
                android:paddingHorizontal="10dp"
                android:paddingVertical="14dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="34dp"
                android:layout_marginTop="10dp">

                <CheckBox
                    android:id="@+id/cbRememberMe"
                    android:layout_width="0dp"
                    android:buttonTint="@drawable/checkbox_selector"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/gray2"
                    android:textSize="12sp"
                    android:textColor="@color/gray4"
                    android:layout_weight="1"
                    android:text="remember me" />

            </LinearLayout>

            <Button
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="34dp"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:background="@drawable/login_btn_bg"
                android:text="Register"
                app:backgroundTint="@null" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Don't have an account?"
                    android:textColor="@color/gray5"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvSignIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sign in"
                    android:textColor="@color/blueGreen"
                    android:textSize="14sp" />

            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>